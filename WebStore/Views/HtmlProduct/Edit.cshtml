@model OnlineStore.Entities.Product

@{
    ViewData["Title"] = "Обновление продукта";
}


<h1>Обновление продукта</h1>

<h4>Продукт</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.HiddenFor(p => p.Id)
            <div class="form-group">
                <label>Название</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Стоимость</label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label>Доступность продукта</label>
                <input asp-for="Available" class="form-control" />
            </div>
            <div class="form-group">
                <label>id продукта</label>
                <input asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Обновить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>